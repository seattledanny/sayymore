# Reddit API Credentials
# Get these from https://www.reddit.com/prefs/apps
REACT_APP_REDDIT_CLIENT_ID=your_reddit_client_id_here
REACT_APP_REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REACT_APP_REDDIT_USER_AGENT=YourAppName/1.0.0

# Firebase Configuration
# Get these from your Firebase project settings
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Application Settings
REACT_APP_POSTS_PER_SUBREDDIT=200
REACT_APP_COMMENTS_PER_POST=5
REACT_APP_MIN_POST_SCORE=50 